{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('/css/security/security_form.css')}}">
{% endblock %}

{% block body %}

	<form action="{{ path('app_login') }}" method="GET" class="has-text-centered">
		<h1 class="has-text-centered has-text-white">Connexion</h1>

		<p class="control mx-auto has-icons-left has-icons-right input-border">
			<input class="input" type="email" placeholder="Email" name="email">
			<span class="icon is-small is-left">
				<i class="fas fa-user"></i>
			</span>
			<span class="icon is-small is-right">
				<i class="fas fa-check"></i>
			</span>
		</p>
		<small class="has-text-white help">Un code temporaire vous sera envoy√© sur votre adresse email.</small>

		<button type="submit" class="button is-rounded mt-5">Se connecter</button>

		<p class="mt-5 mb-3">Pas encore de compte ? <a href="{{ path('app_register' )}}" class="has-text-link">Inscrivez-vous ici</a></p>
	</form>

{% endblock %}
